{
  "name": "@antv/thumbnails-component",
  "version": "2.0.0-alpha.1",
  "description": "React Component for Thumbnails of Chart Types.",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "browser": "dist/index.js",
  "module": "esm/src/index.js",
  "files": [
    "esm",
    "dist",
    "lib"
  ],
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\" \"demo/**/*.{ts,tsx}\"",
    "format-check": " prettier ./src/**/*.ts ./__tests__/**/*.ts ./demo/**/*.{ts,tsx} --check",
    "lint": "eslint ./src/**/*.ts ./__tests__/**/*.ts ./demo/**/*.{ts,tsx} && npm run format-check",
    "fix": "eslint ./src/**/*.ts ./__tests__/**/*.ts ./demo/**/*.{ts,tsx} --fix && npm run format",
    "lint-staged": "lint-staged",
    "size": "limit-size",
    "clean": "rimraf lib esm dist",
    "build:umd": "rimraf ./dist && rollup -c && npm run size",
    "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
    "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
    "build": "run-p build:*",
    "test": "jest",
    "ci": "run-s lint schema test build",
    "prepare:demo": "cd demo && npm install --package-lock=false",
    "start:demo": "npm run prepare:demo && cd demo && npm start",
    "prepare": "husky install",
    "prepublishOnly": "npm run ci",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "gen-ts": "node lib/scripts/generate-ts-files.js",
    "readmepreview": "node lib/scripts/readme-preview.js",
    "test:gen": "npm run build && node lib/scripts/generate-sample-html.js && node lib/scripts/get-svgs.js",
    "update": "npm run build && npm run gen-ts && npm run readmepreview && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:antvis/thumbnails.git"
  },
  "keywords": [
    "AntV",
    "Chart",
    "Visualization",
    "Thumbnails",
    "Design"
  ],
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.32.0",
    "limit-size": "^0.1.4",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "react": "^17.0.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "limit-size": [
    {
      "path": "dist/index.min.js",
      "limit": "8 Kb",
      "gzip": true
    },
    {
      "path": "dist/index.min.js",
      "limit": "24 Kb"
    }
  ]
}
