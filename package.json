{
  "name": "thumbnails",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx './' --ignore-pattern 'packages/'",
    "lint:core": "cd ./packages/core && npm run lint",
    "lint:ui": "cd ./packages/ui && npm run lint",
    "lint-all": "run-p lint lint:*",
    "lint-fix": "npm run lint -- --fix",
    "lint-fix:core": "cd ./packages/core && npm run lint-fix",
    "lint-fix:ui": "cd ./packages/ui && npm run lint-fix",
    "lint-fix-all": "run-p lint-fix lint-fix:*",
    "prettier": " prettier -c \"**/*\"",
    "prettier-fix": "npm run prettier -- --write",
    "prettier:core": "cd ./packages/core && npm run prettier",
    "prettier:ui": "cd ./packages/ui && npm run prettier",
    "format": "npm run prettier-fix && npm run lint-fix-all",
    "format:core": "cd ./packages/core && npm run format",
    "format:ui": "cd ./packages/ui && npm run format",
    "format-all": "run-p format:* format",
    "lint-staged": "lint-staged",
    "test": "jest",
    "prepare": "husky install",
    "clean:core": "cd ./packages/core && npm run clean",
    "clean:ui": "cd ./packages/ui && npm run clean",
    "clean-packages": "run-s clean:*",
    "clean:scripts": "rimraf ./lib",
    "clean": "run-p clean-packages clean:scripts",
    "clear:packages": "lerna clean -y",
    "clear:demo": "cd ./demo && rm -rf node_modules",
    "clear:root": "rimraf node_modules",
    "clear": "run-s clear:packages clear:demo clear:root",
    "cc": "npm run clean && npm run clear",
    "build:core": "cd ./packages/core && npm run build",
    "build:ui": "cd ./packages/ui && npm run build",
    "build-packages": "run-s build:core build:ui",
    "build:scripts": "rimraf ./lib && tsc --pretty",
    "build": "run-s build:scripts build-packages",
    "gen-html": "node lib/generate-sample-html.js",
    "get-svgs": "node lib/get-svgs.js",
    "gen-ts": "node lib/generate-ts-files.js",
    "generate": "run-s build:scripts gen-html get-svgs gen-ts format:core",
    "readme-preview": "node lib/readme-preview.js",
    "setup:demo": "cd demo && npm install --package-lock=false",
    "start:demo": "npm run setup:demo && cd demo && npm start",
    "boot": "lerna bootstrap",
    "ci": "run-s format-all lint-staged test build",
    "release": "npm run ci && lerna publish",
    "one-stop-setup": "npm install --package-lock=false && run-s boot generate build-packages setup:demo"
  },
  "devDependencies": {
    "@antv/ckb": "^2.0.0-alpha.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/fs-extra": "^9.0.4",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^24.0.24",
    "@types/puppeteer": "^5.4.4",
    "@types/svgo": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "fs-extra": "^9.0.1",
    "husky": "^7.0.1",
    "inquirer": "^7.3.3",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "puppeteer": "^11.0.0",
    "rimraf": "^3.0.2",
    "svgo": "^1.3.2",
    "ts-jest": "^24.2.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "rollup": "^2.56.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
